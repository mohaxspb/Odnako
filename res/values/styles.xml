<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="ThemeDark" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/material_grey_700</item>
        <!-- <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item> -->
        <item name="android:textColorPrimary">@color/material_grey_300</item>
        <item name="android:textColorPrimaryInverse">@color/material_grey_300</item>
        <item name="android:textColorSecondary">@color/material_grey_400</item>
        <item name="actionMenuTextColor">@color/material_grey_400</item>
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/material_grey_800</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/material_grey_900</item>
        <item name="colorAccent">@color/material_grey_400</item>
        <item name="popupMenuStyle">@style/OdnakoPopupMenu</item>
        <item name="dropDownListViewStyle">@style/OdnakoDropDownListView</item>
        <item name="actionMenuTextAppearance">@color/material_grey_400</item>
        <item name="android:textColor">@color/material_grey_300</item>
        <!-- custom attrs -->
        <item name="cardBackGroundColor">@color/material_grey_800</item>
        <item name="themeIcon">@drawable/ic_color_lens_white_48dp</item>
        <item name="overflowIcon">@drawable/ic_action_overflow_dark</item>
        <item name="settingsIcon">@drawable/ic_settings_white_48dp</item>
        <item name="refreshIcon">@drawable/ic_autorenew_white_48dp</item>
        <item name="commentsIcon">@drawable/ic_comment_white_48dp</item>
        <item name="shareIcon">@drawable/ic_share_white_48dp</item>
        <!-- arrows -->
        <item name="arrowLeftIcon">@drawable/ic_keyboard_arrow_left_white_48dp</item>
        <item name="arrowRightIcon">@drawable/ic_keyboard_arrow_right_white_48dp</item>
        <item name="arrowUpIcon">@drawable/ic_keyboard_arrow_up_white_48dp</item>
        <item name="arrowDownIcon">@drawable/ic_keyboard_arrow_down_white_48dp</item>
        <!-- more -->
        <item name="authorsIcon">@drawable/ic_group_white_48dp</item>
        <item name="authorIcon">@drawable/ic_person_white_48dp</item>
        <item name="authorsMoreIcon">@drawable/ic_group_add_white_48dp</item>
        <item name="downloadIcon">@drawable/ic_file_download_white_48dp</item>
        <item name="asListIcon">@drawable/ic_list_white_48dp</item>
    </style>

    <style name="OdnakoPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/material_grey_800</item>
        <item name="actionMenuTextColor">@color/material_grey_400</item>
    </style>

    <style name="OdnakoDropDownListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background</item>
        <item name="android:background">@color/material_grey_800</item>
        <item name="actionMenuTextColor">@color/material_grey_400</item>
    </style>

    <style name="ThemeLight" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/material_grey_300</item>
        <item name="android:textColorPrimary">@color/material_grey_800</item>
        <item name="android:textColorPrimaryInverse">@color/material_grey_800</item>
        <item name="actionMenuTextColor">@color/material_grey_800</item>
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/material_grey_400</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/material_grey_500</item>
        <item name="colorAccent">@color/material_grey_800</item>
        <item name="android:textColorSecondary">@color/material_grey_700</item>
        <item name="popupMenuStyle">@style/OdnakoPopupMenuLight</item>
        <item name="dropDownListViewStyle">@style/OdnakoDropDownListViewLight</item>
        <item name="actionMenuTextAppearance">@color/material_grey_800</item>
        <item name="android:textColor">@color/material_grey_800</item>
        <!-- custom attrs -->
        <item name="cardBackGroundColor">@color/material_grey_50</item>
        <item name="themeIcon">@drawable/ic_color_lens_grey600_48dp</item>
        <item name="overflowIcon">@drawable/ic_action_overflow_light</item>
        <item name="settingsIcon">@drawable/ic_settings_grey600_48dp</item>
        <item name="refreshIcon">@drawable/ic_autorenew_grey600_48dp</item>
        <item name="commentsIcon">@drawable/ic_comment_grey600_48dp</item>
        <item name="shareIcon">@drawable/ic_share_grey600_48dp</item>
        <!-- arrows -->
        <item name="arrowLeftIcon">@drawable/ic_keyboard_arrow_left_grey600_48dp</item>
        <item name="arrowRightIcon">@drawable/ic_keyboard_arrow_right_grey600_48dp</item>
        <item name="arrowUpIcon">@drawable/ic_keyboard_arrow_up_grey600_48dp</item>
        <item name="arrowDownIcon">@drawable/ic_keyboard_arrow_down_grey600_48dp</item>
        <!-- more -->
        <item name="authorsIcon">@drawable/ic_group_grey600_48dp</item>
        <item name="authorIcon">@drawable/ic_person_grey600_48dp</item>
        <item name="authorsMoreIcon">@drawable/ic_group_add_grey600_48dp</item>
        <item name="downloadIcon">@drawable/ic_file_download_grey600_48dp</item>
        <item name="asListIcon">@drawable/ic_list_grey600_48dp</item>
    </style>

    <style name="OdnakoPopupMenuLight" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/material_grey_400</item>
        <item name="actionMenuTextColor">@color/material_grey_800</item>
    </style>

    <style name="OdnakoDropDownListViewLight" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background</item>
        <item name="android:background">@color/material_grey_400</item>
        <item name="actionMenuTextColor">@color/material_grey_800</item>
    </style>

</resources>