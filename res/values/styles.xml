<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Odnako custom dark theme with material_grey_colors -->
    <!-- <style name="ThemeDark" parent="Theme.AppCompat"> -->
    <style name="ThemeDark" parent="Theme.AppCompat.NoActionBar">

        <!-- <item name="windowActionModeOverlay">true</item> -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- test -->
        <item name="android:windowBackground">@color/material_grey_700</item>
        <item name="selectorColor">@color/material_grey_500</item>
        <item name="android:textColorPrimary">@color/material_grey_300</item>
        <item name="android:textColorPrimaryInverse">@color/material_grey_300</item>
        <item name="android:textColorSecondary">@color/material_grey_400</item>
        <item name="actionMenuTextColor">@color/material_grey_400</item>
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/material_grey_800</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/material_grey_900</item>
        <item name="colorAccent">@color/material_grey_400</item>
        <item name="popupMenuStyle">@style/OdnakoPopupMenu</item>
        <item name="dropDownListViewStyle">@style/OdnakoDropDownListView</item>
        <item name="actionMenuTextAppearance">@color/material_grey_400</item>
        <item name="android:textColor">@color/material_grey_300</item>
        <!-- custom attrs -->
        <item name="cardBackGroundColor">@color/material_grey_800</item>
        <item name="themeIcon">@drawable/ic_color_lens_white_48dp</item>
        <item name="overflowIcon">@drawable/ic_action_overflow_dark</item>
        <item name="settingsIcon">@drawable/ic_settings_white_48dp</item>
        <item name="refreshIcon">@drawable/ic_autorenew_white_48dp</item>
        <item name="commentsIcon">@drawable/ic_forum_white_48dp</item>
        <item name="shareIcon">@drawable/ic_share_white_48dp</item>
        <!-- arrows -->
        <item name="arrowLeftIcon">@drawable/ic_keyboard_arrow_left_white_48dp</item>
        <item name="arrowRightIcon">@drawable/ic_keyboard_arrow_right_white_48dp</item>
        <item name="arrowUpIcon">@drawable/ic_keyboard_arrow_up_white_48dp</item>
        <item name="arrowDownIcon">@drawable/ic_keyboard_arrow_down_white_48dp</item>
        <!-- more -->
        <item name="authorsIcon">@drawable/ic_group_white_48dp</item>
        <item name="authorIcon">@drawable/ic_person_white_48dp</item>
        <item name="authorsMoreIcon">@drawable/ic_group_add_white_48dp</item>
        <item name="downloadIcon">@drawable/ic_file_download_white_48dp</item>
        <item name="asListIcon">@drawable/ic_list_white_48dp</item>
        <item name="subjectIcon">@drawable/ic_subject_white_48dp</item>
        <item name="categoriesMoreIcon">@drawable/ic_playlist_add_white_48dp</item>
        <item name="vibrationIcon">@drawable/ic_vibration_white_48dp</item>
        <item name="systemSettingsIcon">@drawable/ic_storage_white_48dp</item>
        <item name="aboutIcon">@drawable/ic_info_white_48dp</item>

        <!-- more and more -->
        <item name="marketDownlodIcon">@drawable/ic_shop_white_48dp</item>
        <item name="marketDOWNLOADEDIcon">@drawable/ic_play_install_white_48dp</item>
        <item name="folderIcon">@drawable/ic_folder_special_white_48dp</item>
        <item name="textSizeIcon">@drawable/ic_format_size_white_48dp</item>
        <item name="openInBrowserIcon">@drawable/ic_open_in_browser_white_48dp</item>
        <item name="mailToMeIcon">@drawable/ic_send_white_48dp</item>
    </style>

    <style name="OdnakoPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/material_grey_800</item>
        <item name="actionMenuTextColor">@color/material_grey_400</item>
    </style>

    <style name="OdnakoDropDownListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background</item>
        <item name="android:background">@color/material_grey_800</item>
        <item name="actionMenuTextColor">@color/material_grey_400</item>
    </style>

