<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/ARTICLE_AD_UNIT_ID"
            android:background="@color/odnako" />

        <LinearLayout
            android:id="@+id/art_lin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/adView"
            android:background="@color/odnako"
            android:orientation="vertical" >

            <ScrollView
                android:id="@+id/art_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/odnako"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/art"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/odnako"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/art_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/odnako"
                        android:padding="10dp"
                        android:textColor="@android:color/white"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:id="@+id/art_author_lin_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/odnako"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/art_author_img"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_margin="5dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="@string/hello_world"
                            android:padding="5dp" />

                        <TextView
                            android:id="@+id/art_author"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/odnako"
                            android:paddingLeft="10dp"
                            android:textColor="@android:color/white"
                            android:textSize="21sp" />

                        <ImageView
                            android:id="@+id/art_author_all_arts_btn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/ic_action_view_as_list_dark"
                            android:contentDescription="@string/hello_world"
                            android:padding="5dp" />

                        <ImageView
                            android:id="@+id/art_author_description_btn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/ic_action_expand_dark"
                            android:contentDescription="@string/hello_world"
                            android:padding="5dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/art_author_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/odnako"
                        android:padding="10dp"
                        android:textColor="@android:color/white"
                        android:textSize="21sp" />

                    <View
                        android:id="@+id/separator"
                        android:layout_width="fill_parent"
                        android:layout_height="0.2dp"
                        android:background="@android:color/white"
                        android:visibility="visible" />

                    <ru.kuchanov.odnako.utils.JellyBeanSpanFixTextView
                        android:id="@+id/art_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/odnako"
                        android:padding="10dp"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>

    <ExpandableListView
        android:id="@+id/exListView"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/odnako"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:groupIndicator="@null"
        android:indicatorLeft="250dp"
        android:indicatorRight="300dp" />

</android.support.v4.widget.DrawerLayout>