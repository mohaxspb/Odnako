<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardBackgroundColor="?cardBackGroundColor"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp" >

    <ru.kuchanov.odnako.utils.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleColor="?colorPrimaryDark"
        app:mrl_rippleDelayClick="false"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingLeft="10dp" >

            <android.support.v7.widget.CardView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                app:cardBackgroundColor="?cardBackGroundColor"
                app:cardCornerRadius="6dp"
                app:cardElevation="5dp" >

                <ImageView
                    android:id="@+id/art_share_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/hello_world"
                    android:scaleType="centerInside"
                    android:src="?shareIcon" />
            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/art_share_0"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:contentDescription="@string/hello_world"
                android:scaleType="centerInside"
                android:src="@drawable/social_facebook" />

            <ImageView
                android:id="@+id/art_share_1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:contentDescription="@string/hello_world"
                android:scaleType="centerInside"
                android:src="@drawable/social_twitter" />

            <ImageView
                android:id="@+id/art_share_2"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:contentDescription="@string/hello_world"
                android:scaleType="centerInside"
                android:src="@drawable/social_vkontakte" />

            <ImageView
                android:id="@+id/art_share_3"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:contentDescription="@string/hello_world"
                android:scaleType="centerInside"
                android:src="@drawable/social_odnoklassniki" />

            <ImageView
                android:id="@+id/art_share_4"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:contentDescription="@string/hello_world"
                android:scaleType="centerInside"
                android:src="@drawable/social_google" />

            <ImageView
                android:id="@+id/art_share_5"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:contentDescription="@string/hello_world"
                android:scaleType="centerInside"
                android:src="@drawable/social_livejournal" />
        </LinearLayout>
    </ru.kuchanov.odnako.utils.MaterialRippleLayout>

</android.support.v7.widget.CardView>